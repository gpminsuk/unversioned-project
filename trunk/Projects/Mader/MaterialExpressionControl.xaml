<UserControl x:Class="Mader.MaterialExpressionControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:i="clr-namespace:System.Windows.Interop;assembly=PresentationCore"
    Height="150" Width="Auto">
    <Grid Name="MaterialExpressionGrid">
        <Image Margin="10,30,10,0" Name="Preview" Stretch="Fill" Width="120" Height="120">
            <Image.Source>
                <i:D3DImage x:Name="PreviewImage"/>
            </Image.Source>
        </Image>
        <Label Height="30" Name="ExpressionName" VerticalAlignment="Top" Width="120"/>
    </Grid>
</UserControl>
